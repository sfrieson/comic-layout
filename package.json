{
  "name": "comic-layout",
  "version": "1.0.0",
  "description": "Comic layout software",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run --coverage",
    "tdd": "vitest watch --coverage",
    "start": "vite",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "cycles": "madge -c ./src/main.tsx"
  },
  "keywords": [
    "comic",
    "layout engine",
    "html canvas"
