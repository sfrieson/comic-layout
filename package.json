  "author": "Steven Frieson",
  "license": "ISC",
  "dependencies": {
    "@rexxars/react-split-pane": "^1.0.0",
    "@tailwindcss/vite": "^4.1.12",
    "idb": "^8.0.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hotkeys-hook": "^5.1.0",
    "tailwindcss": "^4.1.12",
    "uuid": "^11.1.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@types/wicg-file-system-access": "^2023.10.6",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
